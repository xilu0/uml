@startuml
package "预订系统" {
    [用户服务]
    [预订服务]
    [支付服务]
    [日历服务]
    [通知服务]
    [报告服务]

    database "数据库" {
        [用户数据]
        [预订数据]
        [支付数据]
        [日历数据]
    }

    [用户服务] --> [用户数据]
    [预订服务] --> [预订数据]
    [支付服务] --> [支付数据]
    [日历服务] --> [日历数据]

    [用户服务] ..> [预订服务] : 使用
    [预订服务] ..> [日历服务] : 使用
    [预订服务] ..> [支付服务] : 使用
    [预订服务] ..> [通知服务] : 使用
    [报告服务] ..> [数据库] : 查询
}

@enduml
